<div class="login_upper">
  <span style="font-size:1em; padding-left:3%;"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span>서울대학교 통합 정보 사이트 : info_U</span>
</div>
<div class="row">
  <div class="col-xs-6 col-md-6 login_up">
    <img class="login_content" src="http://www.snu.ac.kr/images/common/img/img01_mark_ab0102.gif">
  </div>
  <div class="col-xs-6 col-md-6 login_up">
    <div class="login_form login_content login_form_head">
      <span id="login_title">SNU Member Login
    </div>
    <div class="login_form login_content login_form_body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <form>
        <div class="field">
          <%#= f.label :email, "emailing" %><br>
          <div class="input-group">
            <div class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
            <%= f.email_field :email, autofocus: false, :class => "form-control", :onfocus => "if (this.placeholder=='e-mail') this.value = ''", :placeholder => "e-mail@gmail.com" %>
          </div>
        </div>
        <div class="field">
          <%#= f.label :password %><br>
          <div class="input-group">
            <div class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></div>
            <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "비밀번호" %>
          </div>
        </div><br>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "로그인을 유지합니다", :style => "color:#7E8AA0;"%>
          </div>
        <% end -%>
        <div class="actions">
        <%= content_tag :button, class: "login_btn" do -%><%#= f.submit %> 로그인<% end -%>
        </div>
      <% end %>
      </form><%#= render "devise/shared/links" %>
    </div>
    <div class="login_form login_content login_form_footer">
    SNU Member Login
    </div>
    </div>
    
  </div>



<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>